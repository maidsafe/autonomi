<?xml version="1.0" encoding="utf-8"?>
<Package
  xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
  xmlns:uap5="http://schemas.microsoft.com/appx/manifest/uap/windows10/5"
  xmlns:rescap="http://schemas.microsoft.com/appx/manifest/foundation/windows10/restrictedcapabilities"
  IgnorableNamespaces="uap uap5 rescap">

  <Identity
    Name="Autonomi.NodeLaunchpad"
    Publisher="PUBLISHER_PLACEHOLDER"
    Version="VERSION_PLACEHOLDER"
    ProcessorArchitecture="x64" />

  <Properties>
    <DisplayName>Node Launchpad</DisplayName>
    <PublisherDisplayName>MaidSafe.net Limited</PublisherDisplayName>
    <Description>TUI for running nodes on the Autonomi network</Description>
    <Logo>Assets\StoreLogo.png</Logo>
  </Properties>

  <Dependencies>
    <TargetDeviceFamily Name="Windows.Desktop" MinVersion="10.0.17763.0" MaxVersionTested="10.0.22621.0" />
  </Dependencies>

  <Resources>
    <Resource Language="en-us" />
  </Resources>

  <Capabilities>
    <rescap:Capability Name="runFullTrust" />
  </Capabilities>

  <Applications>
    <Application Id="NodeLaunchpad"
                 Executable="node-launchpad.exe"
                 EntryPoint="Windows.FullTrustApplication">
      <uap:VisualElements
        DisplayName="Node Launchpad"
        Description="TUI for running nodes on the Autonomi network"
        BackgroundColor="transparent"
        Square150x150Logo="Assets\Square150x150Logo.png"
        Square44x44Logo="Assets\Square44x44Logo.png">
        <uap:DefaultTile Wide310x150Logo="Assets\Square150x150Logo.png" />
      </uap:VisualElements>

      <Extensions>
        <!-- App Execution Alias allows running node-launchpad.exe from command line -->
        <uap5:Extension Category="windows.appExecutionAlias"
                        EntryPoint="Windows.FullTrustApplication"
                        Executable="node-launchpad.exe">
          <uap5:AppExecutionAlias>
            <uap5:ExecutionAlias Alias="node-launchpad.exe" />
          </uap5:AppExecutionAlias>
        </uap5:Extension>
      </Extensions>
    </Application>
  </Applications>

</Package>
